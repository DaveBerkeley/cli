
gtest_dir = '/usr/src/gtest/lib/'

test_files = [
    'gtest.cpp',
    'printf_test.cpp',
    'list_test.cpp',
    'linux/mutex.cpp',
    'linux/io.cpp',
    gtest_dir + 'libgtest.a',
    gtest_dir + 'libgtest_main.a',
]

files = [
    '../src/cli.c',
    '../src/debug.c',
    '../src/list.cpp',
    '../src/sprintf.cpp',
] + test_files

libs = [
    'pthread',
]

cflags = [
    '-Wall',
    '-Wextra',
    '-Wswitch-default',
    '-Wswitch-enum',
    '-Wconversion',
    '-Wunused-parameter',

    '-Wno-missing-field-initializers',

    '-g',
    '-DGOOGLETEST',
    '-Isrc',
]

cxxflags = [
    '-std=c++11',
]

lflags = [
    '-lpthread',
]

env = Environment(CCFLAGS=cflags, CXXFLAGS=cxxflags, LINKFLAGS=lflags)
tdd = env.Program(target='tdd', source=files, LIBS=libs)

env.Alias('tdd', tdd)

